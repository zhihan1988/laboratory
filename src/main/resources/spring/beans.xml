<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <!--配置Bean的后置处理器-->
    <bean id="beanPostProcessor" class="spring.MyBeanPostProcessor">
    </bean>

    <!--配置instantiationAwareBeanPostProcessor-->
    <bean id="instantiationAwareBeanPostProcessor" class="spring.MyInstantiationAwareBeanPostProcessor">
    </bean>

    <!--配置BeanFactory的后置处理器-->
    <bean id="beanFactoryPostProcessor" class="spring.MyBeanFactoryPostProcessor">
    </bean>

    <!--lazy-init 默认为false-->
    <bean id="studentBean" class="spring.StudentBean" init-method="myInit"
          destroy-method="myDestroy" scope="singleton" lazy-init="true">
        <property name="name" value="student"></property>
        <property name="age" value="21"></property>
        <property name="teacherBean" ref="teacherBean"></property>
    </bean>

    <!--lazy-init 默认为false-->
    <bean id="teacherBean" class="spring.TeacherBean" init-method="myInit"
          destroy-method="myDestroy" scope="singleton" lazy-init="true">
        <property name="name" value="teacher"></property>
        <property name="age" value="33"></property>
    </bean>


</beans>
